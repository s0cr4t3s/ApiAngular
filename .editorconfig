# top-most section file
root = true

# ==============================================================================
# 1. CORE FILE FORMATTING RULES (Only generic, non-language specific rules here)
# ==============================================================================

[*]
# Line endings
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
charset = utf-8
indent_style = tab
tab_width = 4

# ==============================================================================
# 2. C# CODING STYLE AND FORMATTING RULES
# ==============================================================================

[*.cs]
# ----- Indentation (Standard C# practice is 4 spaces) -----
indent_size = 4
indent_style = tab
tab_width = 4

# ----- C# Modernization (C# 10+ and Best Practices) -----
# Use file-scoped namespaces (reduces nesting)
csharp_style_namespace_declaration = file_scoped:warning

# Place 'using' directives outside the namespace block (standard since .NET 6)
csharp_style_using_directive_placement = outside_namespace:warning

# Separate 'using' directive groups (System vs. others) for clarity
dotnet_separate_import_directive_groups = true
dotnet_sort_system_directives_first = true

# Prefer C# 12 Primary Constructors
csharp_style_prefer_primary_constructors = true:suggestion

# ----- Bracing and Newline Preferences (Your Allman style) -----
# Force braces on a new line (Allman style)
csharp_new_line_before_open_brace = all
csharp_preserve_single_line_blocks = true

# ----- Language/Keyword Preferences -----
# Use built-in type keywords (e.g., 'string' instead of 'String')
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_predefined_type_for_member_access = true:suggestion

# Var preferences
csharp_style_var_elsewhere = false:suggestion
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion

# Prefer 'this.' qualification for fields (explicitly set in your file)
dotnet_style_qualification_for_field = true:suggestion

# ----- C# Expression/Syntax Preferences (Consolidated from global section) -----
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_null_propagation = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
dotnet_style_prefer_auto_properties = true:suggestion
dotnet_style_object_initializer = true:suggestion
dotnet_style_collection_initializer = true:suggestion
dotnet_style_prefer_conditional_expression_over_assignment = true:suggestion
dotnet_style_prefer_conditional_expression_over_return = true:suggestion

# Pattern matching features
csharp_style_pattern_matching_over_is_with_cast_check = true:suggestion
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion
csharp_style_prefer_not_pattern = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion

# Simplified syntax
csharp_style_implicit_object_creation_when_type_is_apparent = true:suggestion
csharp_style_inlined_variable_declaration = true:suggestion
csharp_style_prefer_range_operator = true:suggestion
csharp_style_throw_expression = true:suggestion
csharp_style_prefer_index_operator = true:suggestion
csharp_prefer_simple_using_statement = true:suggestion
csharp_prefer_system_threading_lock = true:suggestion

# ----- Expression-bodied members (Simplified) -----
# Only use expression bodies for members that are simple and on a single line
csharp_style_expression_bodied_accessors = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_lambdas = true:suggestion
csharp_style_expression_bodied_indexers = true:suggestion
csharp_style_expression_bodied_methods = false:silent
csharp_style_expression_bodied_constructors = false:silent
csharp_style_expression_bodied_operators = false:silent
csharp_style_expression_bodied_local_functions = false:silent

# ----- Formatting: Spaces and New Lines -----
csharp_space_around_binary_operators = before_and_after
csharp_new_line_before_catch = true
csharp_new_line_before_else = true
csharp_new_line_before_finally = true
csharp_space_after_comma = true
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_semicolon_in_for_statement = true
dotnet_style_operator_placement_when_wrapping = beginning_of_line:suggestion
csharp_indent_labels = one_less_than_current # Only applies to jump labels

# ==============================================================================
# 3. NAMING CONVENTIONS
# ==============================================================================

# [NAMING RULES]
dotnet_naming_style.pascal_case_style.capitalization = pascal_case
dotnet_naming_style.begins_with_i.required_prefix = I
dotnet_naming_style.begins_with_i.capitalization = pascal_case
dotnet_naming_style.prefix_underscore.required_prefix = _
dotnet_naming_style.prefix_underscore.capitalization = camel_case
dotnet_naming_style.prefix_underscore_pascal_case.required_prefix = _
dotnet_naming_style.prefix_underscore_pascal_case.capitalization = pascal_case
dotnet_naming_style.constant_fields_pascal_case.capitalization = pascal_case
dotnet_naming_style.non_fields_pascal_case.capitalization = pascal_case
dotnet_naming_style.class_struct_enum_record_pascal_case.capitalization = pascal_case

# [SYMBOL DEFINITIONS]
dotnet_naming_symbols.public_interface.applicable_kinds = interface
dotnet_naming_symbols.public_interface.applicable_accessibilities = public, internal
dotnet_naming_symbols.private_instance_fields.applicable_kinds = field
dotnet_naming_symbols.private_instance_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_instance_fields.required_modifiers =
dotnet_naming_symbols.private_static_fields.applicable_kinds = field
dotnet_naming_symbols.private_static_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_static_fields.required_modifiers = static
dotnet_naming_symbols.constant_fields.applicable_kinds = field
dotnet_naming_symbols.constant_fields.required_modifiers = const
dotnet_naming_symbols.non_fields.applicable_kinds = property, event, method
dotnet_naming_symbols.non_fields.applicable_accessibilities = public, internal, private, protected, protected_internal, private_protected
dotnet_naming_symbols.type_declarations.applicable_kinds = class, struct, enum, record
dotnet_naming_symbols.type_declarations.applicable_accessibilities = public, internal, private, protected, protected_internal, private_protected

# [NAMING RULES]
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = public_interface
dotnet_naming_rule.interface_should_be_begins_with_i.style = begins_with_i
dotnet_naming_rule.interface_should_be_begins_with_i.severity = warning
dotnet_naming_rule.private_fields_with_underscore.symbols = private_instance_fields
dotnet_naming_rule.private_fields_with_underscore.style = prefix_underscore
dotnet_naming_rule.private_fields_with_underscore.severity = warning
dotnet_naming_rule.private_static_fields_with_underscore.symbols = private_static_fields
dotnet_naming_rule.private_static_fields_with_underscore.style = prefix_underscore_pascal_case
dotnet_naming_rule.private_static_fields_with_underscore.severity = warning
dotnet_naming_rule.constant_fields_have_capitalization_pascal_case.symbols = constant_fields
dotnet_naming_rule.constant_fields_have_capitalization_pascal_case.style = constant_fields_pascal_case
dotnet_naming_rule.constant_fields_have_capitalization_pascal_case.severity = warning
dotnet_naming_rule.properties_event_methods_have_capitalization_pascal_case.symbols = non_fields
dotnet_naming_rule.properties_event_methods_have_capitalization_pascal_case.style = non_fields_pascal_case
dotnet_naming_rule.properties_event_methods_have_capitalization_pascal_case.severity = warning
dotnet_naming_rule.classes_structs_enums_have_capitalization_pascal_case.symbols = type_declarations
dotnet_naming_rule.classes_structs_enums_have_capitalization_pascal_case.style = non_fields_pascal_case
dotnet_naming_rule.classes_structs_enums_have_capitalization_pascal_case.severity = warning

# ==============================================================================
# 4. EXPLICIT SEVERITY CONFIGURATION
# ==============================================================================

# IDE0060: Remove unused parameters (Good rule to enforce)
dotnet_diagnostic.IDE0060.severity = warning

# CS1591: Missing XML comment for publicly visible type or member (Documentation rule)
dotnet_diagnostic.CS1591.severity = none

# ==============================================================================
# 5. OTHER FILE TYPES
# ==============================================================================

# JSON files keep your original settings
[*.json]
indent_size = 4
indent_style = tab
tab_width = 4
